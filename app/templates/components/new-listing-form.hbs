{{#if newListingForm}}
  <div class="col-sm-6">
    <h3>New listing</h3>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price"}}
      </div>
      <button class="btn btn-success" {{action 'saveListing'}}>Save listing</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'updateNewListingForm'}}>Add a listing</button>
{{/if}}
